{
    "name": "edgardmessias/glpi-singlesignon",
    "description": "Single Sign-On (OAuth) for GLPI",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "consolidation/robo": "^4.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "glpi-project/coding-standard": "^0.9",
        "glpi-project/tools": "^0.8",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpstan/phpdoc-parser": ">=1.5.1 <1.6",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "GlpiPlugin\\Singlesignon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Glpi\\Tools\\": "../../tools/src/"
        }
    },
    "scripts": {
        "lint": "vendor/bin/robo lint",
        "lint:fix": "vendor/bin/robo lint:fix",
        "make-release": "vendor/bin/robo build",
        "update-locales": "vendor/bin/robo update_locales"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2.99"
        },
        "sort-packages": true
    }
}
