{
    "name": "edgardmessias/glpi-singlesignon",
    "description": "Single Sign-On (OAuth) for GLPI",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "consolidation/robo": "^4.0",
        "friendsofphp/php-cs-fixer": "^3.86",
        "glpi-project/tools": "^0.8"
    },
    "autoload": {
        "psr-4": {
            "GlpiPlugin\\Singlesignon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Glpi\\Tools\\": "../../tools/src/"
        }
    },
    "scripts": {
        "lint": "vendor/bin/php-cs-fixer fix --dry-run --diff --allow-risky=yes --allow-unsupported-php-version=yes",
        "lint:fix": "vendor/bin/php-cs-fixer fix --allow-risky=yes --allow-unsupported-php-version=yes",
        "make-release": "vendor/bin/robo build",
        "update-locales": "vendor/bin/robo update_locales"
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2.99"
        },
        "sort-packages": true
    }
}
